# ghq aliases
alias repo="ghq-cd"
alias repo-code="ghq-code"
alias repo-nvim="ghq-nvim"
alias repo-new="ghq-create-new-repository"

# eza (ls replacement)
alias ls="eza --color=always --icons --group-directories-first"
alias ll='ls -alF'
alias ls-tree='ls --tree'

alias cat='bat --color=always --paging=never'
alias less='bat --color=always --paging=always'

# VSCode WSL alias
alias code='code --remote wsl+Ubuntu'